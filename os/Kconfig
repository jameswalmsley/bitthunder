 	bool "UART subsystem"
	default y

endmenu

config THREADS
    bool
	default y
	depends on !KERNEL_NONE
	depends on OS

config PROCESS
    bool
	default y
	depends on !KERNEL_NONE
	depends on OS

config TIMERS
	bool
	default y
	depends on !KERNEL_NONE
	depends on OS
