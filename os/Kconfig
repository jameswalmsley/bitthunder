    bool "QEI subsystem"
	default n

config MCPWM
    bool "MCPWM subsystem"
	default n

config PWM
    bool "PWM subsystem"
	default n

config TIMER
    bool "Timer subsystem"
	default n

config MTD
    bool "MTD subsystem"
    default n

source os/src/rtc/Kconfig

config SPI
	bool "SPI subsystem"
	default n

config CAN
    bool "CAN subsystem"
	default n

